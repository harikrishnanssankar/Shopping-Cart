<section>
    <div class="container-fluid">
        <div class="row mt-3">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-3">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Images</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>1</td>
                        <td>{{this.Name}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Description}}</td>
                        <td>{{this.Price}}</td>
                        <td><img style="max-width:75px; height:65px;" src="/product-image/{{this._id}}.jpg" alt=""></td>
                        <td><a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a></td>
                        <td><a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>